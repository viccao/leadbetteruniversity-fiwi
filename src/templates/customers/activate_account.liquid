<header role="banner" class="dale-margin">

  <div class="bg" style="background: var(--dark);">
  </div>
  <div class="standard-bar">
    <div class="container">
      <h1>{{ 'customer.login.title' | t }}</h1>

    </div>
  </div>
</header>

<div class="container pt-5 pb-5">
<h1>{{ 'customer.activate_account.title' | t }}</h1>
<p>{{ 'customer.activate_account.subtext' | t }}</p>

{% form 'activate_customer_password' %}
  {{ form.errors | default_errors }}

  <div class="row">
  <div class="col-lg-6 col-sm-12">

  <div class="row">
    <div class="col-lg-6 mb-3">
      <div class="input-group">

    <input type="password"
      name="customer[password]"
      id="CustomerPassword"
      spellcheck="false"
      autocomplete="nope"
      autofill="off"
      autocapitalize="off"
      required><div class="bg"></div>
    <label for="CustomerPassword" class="float-label">
      {{ 'customer.activate_account.password' | t }}
    </label>
      </div>
    <div class="col-lg-9 mb-3">

    <div class="inline-btn mb-5">
       <div class="input-group">
    <input type="password"
      name="customer[password_confirmation]"
      id="CustomerPasswordConfirmation"
      spellcheck="false"
      autocomplete="nope"
      autofill="off"
      autocapitalize="off"
      required><div class="bg"></div>
    <label for="CustomerPasswordConfirmation" class="float-label">
      {{ 'customer.activate_account.password_confirm' | t }}
    </label>
         <div class="btn-container">
           <input type="submit" class="btn btn-primary" value="{{ 'customer.activate_account.submit' | t }}">
         </div>
      </div>
      </div>
      </div>
    </div>


  <input type="submit" class="btn" name="decline" value="{{ 'customer.activate_account.cancel' | t }}">
{% endform %}

</div>
