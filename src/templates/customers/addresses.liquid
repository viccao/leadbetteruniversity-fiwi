            <label class="float-label" for="AddressCompanyNew">
            {{ 'customer.addresses.company' | t }}
            </label>
            </div>
          </div>

        </div>
        <div class="row">

          <div class="col-lg-12 col-sm-6 mb-3">

            <div class="input-group">

            <input type="text"
           class="form-control"
            name="address[address1]"
            id="AddressAddress1New"
            value="{{ form.address1 }}"
            autocapitalize="words"><div class="bg"></div>
            <label class="float-label" for="AddressAddress1New">
            {{ 'customer.addresses.address1' | t }}
            </label>
            </div>
          </div>

          <div class="col-lg-12 col-sm-6 mb-3">

            <div class="input-group">

            <input type="text"
           class="form-control"
            name="address[address2]"
            id="AddressAddress2New"
            value="{{ form.address2 }}"
            autocapitalize="words"><div class="bg"></div>
            <label class="float-label" for="AddressAddress2New">
            {{ 'customer.addresses.address2' | t }}
            </label>
            </div>
          </div>

          <div class="col-lg-8 col-sm-6 mb-3">
            <div class="input-group">
            <input type="text"
           class="form-control"
            name="address[city]"
            id="AddressCityNew"
            value="{{ form.city }}"
            autocapitalize="words"><div class="bg"></div>
            <label class="float-label" for="AddressCityNew">
            {{ 'customer.addresses.city' | t }}
            </label>

            </div>
          </div>

          <div class="col-lg-4 col-sm-6 mb-3">

            <div class="input-group">
            <input type="text"
           class="form-control"
            name="address[zip]"
            id="AddressZipNew"
            value="{{ form.zip }}"
            autocapitalize="characters"> <div class="bg"></div>
            <label class="float-label" for="AddressZipNew">
            {{ 'customer.addresses.zip' | t }}
            </label>
            </div>

          </div>
          <div class="col-lg-6 col-sm-6 mb-3">
            <div class="input-group">

         <select
            data-address-country
            name="address[country]"
            id="AddressCountryNew"
            class="address-country-option form-control"
            data-form-id="{{ form.id }}"
            data-default="{{ form.country }}">
          </select>

              <div class="bg"></div>
            <label class="float-label" for="AddressCountryNew">
            {{ 'customer.addresses.country' | t }}
            </label>




            </div>
          </div>



          <div class="col-lg-6 col-sm-6 mb-3">


            <div id="AddressProvinceContainerNew"
                 data-address-province-wrapper
                 class="hide">

            <div class="input-group">

            <select
              data-address-province
              class="form-control"
              name="address[province]"
              id="AddressProvinceNew"
              data-default="{{ form.province }}">
            </select>

              <div class="bg"></div>
            <label class="float-label" for="AddressProvinceNew">
            {% if form.country == 'United States' %}
            State
            {% else %}
            {{ 'customer.addresses.province' | t }}
            {% endif %}
            </label>
            </div>

            </div>
          </div>





      </div>
        <div class="row align-items-start">

        <div class="col-lg-3 mb-3">
          <div class="checkbox">
          {{ form.set_as_default_checkbox }}
          <div class="chk"></div>
          <label for="address_default_addressNew">
            {{ 'customer.addresses.set_default' | t }}
          </label>

          </div>

        </div>
          <div class="col-lg-auto ml-auto mb-3">
          <button type="submit" class="btn btn-primary">{{ 'customer.addresses.add' | t }}</button>
          </div>
          <div class="col-lg-auto mb-3">
          <button type="button" class="btn" data-address-toggle data-form-id="{{ form.id }}">
            {{ 'customer.addresses.cancel' | t }}
          </button>
          </div>


        </div>

        </div>
        </div>


      {% endform %}
    </div>
  </div>

  <h2>{{ 'customer.addresses.title' | t }}</h2>

  {% for address in customer.addresses %}

    <div data-address>

      {% if address == customer.default_address %}
        <h3 class="mb-2"><span>{{ 'customer.addresses.default' | t }}</span></h3>
      {% endif %}
      <div class="adddress-card">
      {{ address | format_address }}
      </div>

      <div class="row mb-4">
      <div class="col-auto mb-3">
        <button type="button" class="btn btn-primary" data-address-toggle>
              {{ 'customer.addresses.edit' | t }}
            </button>
      </div>
      <div class="col-auto mb-3">
        <form data-address-delete-form method="post" action="/account/addresses/{{ address.id }}" data-confirm-message="{{ 'customer.addresses.delete_confirm' | t }}">
              <input type="hidden" name="_method" value="delete"/>
              <button type="submit" class="btn">
                {{ 'customer.addresses.delete' | t }}
              </button>
            </form>
      </div>
      </div>




      <div data-address-form class="hide">
        {% form 'customer_address', address %}

        <h4>{{ 'customer.addresses.edit_address' | t }}</h4>


        <div class="row">
        <div class="col-md-8">

        <div class="row">
          <div class="col-md-6 mb-3">

            <div class="input-group">

            <input type="text"
           class="form-control"
            name="address[first_name]"
