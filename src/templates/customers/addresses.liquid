            </label>
            </div>
          </div>

          <div class="col-lg-8 col-sm-6 mb-3">
            <div class="input-group">
            <input type="text"
           class="form-control"
            name="address[city]"
            id="AddressCity_{{ form.id }}"
            value="{{ form.city }}"
            autocapitalize="words"><div class="bg"></div>
            <label class="float-label" for="AddressCity_{{ form.id }}">
            {{ 'customer.addresses.city' | t }}
            </label>

            </div>
          </div>

          <div class="col-lg-4 col-sm-6 mb-3">

            <div class="input-group">
            <input type="text"
           class="form-control"
            name="address[zip]"
            id="AddressZip_{{ form.id }}"
            value="{{ form.zip }}"
            autocapitalize="characters"> <div class="bg"></div>
            <label class="float-label" for="AddressZip_{{ form.id }}">
            {{ 'customer.addresses.zip' | t }}
            </label>
            </div>

          </div>
          <div class="col-lg-6 col-sm-6 mb-3">
            <div class="input-group">

         <select
            data-address-country
            name="address[country]"
            id="AddressCountry_{{ form.id }}"
            class="address-country-option form-control"
            data-form-id="{{ form.id }}"
            data-default="{{ form.country }}">
          </select>

              <div class="bg"></div>
            <label class="float-label" for="AddressCountry_{{ form.id }}">
            {{ 'customer.addresses.country' | t }}
            </label>




            </div>
          </div>



          <div class="col-lg-6 col-sm-6 mb-3">


            <div id="AddressProvinceContainer_{{ form.id }}"
                 data-address-province-wrapper
                 class="hide">

            <div class="input-group">

            <select
              data-address-province
              class="form-control"
              name="address[province]"
              id="AddressProvince_{{ form.id }}"
              data-default="{{ form.province }}">
            </select>

              <div class="bg"></div>
            <label class="float-label" for="AddressProvince_{{ form.id }}">
            {% if form.country == 'United States' %}
            State
            {% else %}
            {{ 'customer.addresses.province' | t }}
            {% endif %}
            </label>
            </div>

            </div>
          </div>





      </div>
        <div class="row align-items-start">

        <div class="col-lg-3 mb-3">
          <div class="checkbox">
          {{ form.set_as_default_checkbox }}
          <div class="chk"></div>
          <label for="address_default_address_{{ form.id }}">
            {{ 'customer.addresses.set_default' | t }}
          </label>

          </div>

        </div>
          <div class="col-lg-auto ml-auto mb-3">
          <button type="submit" class="btn btn-primary">{{ 'customer.addresses.update' | t }}</button>
          </div>
          <div class="col-lg-auto mb-3">
          <button type="button" class="btn" data-address-toggle data-form-id="{{ form.id }}">
            {{ 'customer.addresses.cancel' | t }}
          </button>
          </div>

          {% endform %}

        </div>

        </div>
        </div>


      </div>
        {% endfor %}


  {% if paginate.pages > 1 %}
    {% include 'pagination' %}
  {% endif %}

{% endpaginate %}

  </div>

</div>
